<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <FrameLayout
        android:id="@+id/aci_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/aci_group_background"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/aci_main_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/acd_bg_btn"
            android:onClick="onClick"
            android:text="首页"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/aci_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/acd_bg_btn"
            android:onClick="onClick"
            android:text="设置"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/aci_mine_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/acd_bg_btn"
            android:onClick="onClick"
            android:text="我的"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/aci_pool_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/acd_bg_btn"
            android:onClick="onClick"
            android:text="Pool"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>